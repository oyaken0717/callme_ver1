<div class="user-show">
  <%= notice %>
  <div class="user-show__userimage"><%= image_tag (@user.image.url) if @user.image.present? %></div>
  <div class="user-show__username"><%= @user.name %>のページ</div>
  <div class="user-show__emailitem"><%= "メールアドレス: #{ @user.email } " %></div>
  <div class="user-show__option clearfix">
    <% if current_user == @user %>
      <div class="user-show__edit btn-default"><%= link_to "編集", edit_user_path(@user.id||User.new) %></div>
      <div class = "user-show__delete btn-default"><%= link_to "削除", user_path(@user.id), method: :delete, data:{confirm: "本当に削除しますか？"} %></div>
    <% end %>
  </div>

  <div class="user-show__groups">所属グループ</div>
  <% @user.groups.each do |group| %>
    <div class="user-show__groupshow btn-default"><%= link_to group.name, group_path(group.id) %></div>
  <% end %>
</div>
